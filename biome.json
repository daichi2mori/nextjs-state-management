{
  "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "include": ["app/**/*.js", "app/**/*.jsx", "app/**/*.ts", "app/**/*.tsx", "app/**/*.json"],
    "ignore": ["node_modules", "dist", ".github", ".vscode", "public"]
  }
}
